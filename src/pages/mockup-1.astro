---
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Jouw Professionele Website Zonder Gedoe" page="mockup-1">
  <header class="site-header with-navbar">
    <Navbar type="light" />
    <div class="header-hero">
      <div class="header-background svg"></div>

      <div class="container">
        <h1>
          Professioneel online zichtbaar als <span class="highlight"
            >specialist</span
          >
        </h1>
        <p class="subtitle">
          Zichtbaar worden op jouw manier – ik zorg dat jouw website werkt én
          bij je past.
        </p>
        <a href="#paketten" class="btn btn--primary">Bekijk de opties</a>
      </div>
    </div>
  </header>
  <main>
    <section class="bg-gradient-light">
      <div class="container">
        <div class="showcase">
          <img
            src="https://via.placeholder.com/400x300?text=Nagel+1"
            alt="Showcase 1"
          />
          <img
            src="https://via.placeholder.com/400x300?text=Nagel+2"
            alt="Showcase 2"
          />
          <img
            src="https://via.placeholder.com/400x300?text=Nagel+3"
            alt="Showcase 3"
          />
        </div>
      </div>
    </section>
  </main>
  <section class="bg-gradient-light">
    <div class="container">
      <div class="about">
        <div class="text">
          <h2>Over mij</h2>
          <p>
            Mijn naam is [Naam], en ik help zzp’ers zoals jij aan een online
            visitekaartje dat écht past bij jou en je klanten. Geen technische
            rompslomp – ik regel alles van hosting tot aan een professionele
            uitstraling.
          </p>
        </div>
        <img
          src="https://via.placeholder.com/400x400?text=Over+mij"
          alt="Over mij"
        />
      </div>
    </div>
  </section>

  <section class="contact-form">
    <h2 style="text-align:center;">Contact opnemen</h2>
    <form name="contact" netlify>
      <input type="text" name="naam" placeholder="Je naam" required />
      <input type="email" name="email" placeholder="Je e-mailadres" required />
      <textarea name="bericht" rows="5" placeholder="Je bericht..." required
      ></textarea>
      <button type="submit">Verstuur bericht</button>
    </form>
  </section>

  <footer class="site-footer bg-gradient-dark">
    <div class="container">
      <p>
        © 2025 Zakelijke Website – Persoonlijke webdesign voor beauty
        ondernemers
      </p>
    </div>
  </footer>
</BaseLayout>

<style lang="scss">
  @use "../styles/pages/mockup-1.scss";
</style>
